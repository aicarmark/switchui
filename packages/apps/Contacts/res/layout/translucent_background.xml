<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transDialPad"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="center_horizontal">
    <!-- The MOTO version of Answer, Ignore mechanism -->
    <RelativeLayout android:id="@+id/dialButtonGroup"
        android:orientation="horizontal"
        android:layout_marginTop="480dip"
        android:layout_width="344dip"
        android:layout_height="79dip">
        <ImageButton android:id="@+id/bothOfCDMA"
	        android:layout_width="168dip"
	        android:layout_height="match_parent"
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/dial_btn_smart_c_src"
	        android:background="@drawable/dial_btn_smart_c_bg"
	        android:textSize="16dip"
	        android:textStyle="bold"
	        android:textColor="#FFFFFFFF"/>
        <ImageButton android:id="@+id/bothOfGSM" 
	        android:layout_width="168dip"
	        android:layout_height="match_parent"
	        android:layout_alignParentRight="true"
	        android:src="@drawable/dial_btn_smart_g_src"
	        android:background="@drawable/dial_btn_smart_g_bg"
	        android:textSize="16dip"
	        android:textStyle="bold"
	        android:textColor="#FFFFFFFF"/>
    </RelativeLayout>
</LinearLayout>

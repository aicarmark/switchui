        android:layout_marginLeft="@dimen/dialpad_outside_margin"
        android:layout_marginRight="@dimen/dialpad_outside_margin_right"
        android:background="?android:attr/selectableItemBackground"
    >
    <ImageView android:id="@+id/sd_divider"

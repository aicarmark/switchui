<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transDialPad"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true">
    <!-- The MOTO version of Answer, Ignore mechanism -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="335px" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >
        <ImageButton
            android:id="@+id/bothOfCDMA"
            android:layout_width="320px"
            android:layout_height="120px"
            android:layout_marginLeft="270px"
            android:background="@drawable/dial_btn_smart_c_bg"
            android:src="@drawable/dial_btn_smart_c_src"
            android:textColor="#FFFFFFFF"
            android:textSize="22px"
            android:textStyle="bold" >
        </ImageButton>

        <ImageButton
            android:id="@+id/bothOfGSM"
            android:layout_width="320px"
            android:layout_height="120px"
            android:layout_marginLeft="100px"
            android:background="@drawable/dial_btn_smart_c_bg"
            android:src="@drawable/dial_btn_smart_g_src"
            android:textColor="#FFFFFFFF"
            android:textSize="22px"
            android:textStyle="bold" >
        </ImageButton>
    </LinearLayout>

</LinearLayout>

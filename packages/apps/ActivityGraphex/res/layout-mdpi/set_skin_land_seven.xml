<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
   android:orientation="vertical"
   android:background="@drawable/bg_transparency_landscape">
  
     
  <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"  
        android:layout_height="216px"
        >  
	
     <AbsoluteLayout 
        
        android:layout_width="352px"
        android:layout_height="216px"    
        >
     <ImageView android:id="@+id/empty" 
                android:layout_width="345px"             
                android:layout_height="192px"
                android:layout_x="7px"
                android:layout_y="24px"
                android:src="@drawable/bg_manage_landscape" >
        </ImageView>
        <ImageView android:id="@+id/empty_big" 
                android:layout_width="110px"             
                android:layout_height="110px"
                android:layout_x="96px"
                android:layout_y="16px"
                android:src="@drawable/bg_manage_big_landscape" > 
        </ImageView>
       <ImageView android:id="@+id/shadow1" 
                android:layout_width="131px"             
                android:layout_height="131px"
                android:layout_x="86px"
                android:layout_y="6px"
                android:src="@drawable/shadow_big" >
        </ImageView>
        <ImageView android:id="@+id/shadow2" 
                android:layout_width="112px"             
                android:layout_height="112px"
                android:layout_x="7px"
                android:layout_y="23px"
                android:src="@drawable/shadow_medium" >
        </ImageView>
        
         <ImageView android:id="@+id/shadow3" 
                android:layout_width="98px"             
                android:layout_height="98px"
                android:layout_x="19px"
                android:layout_y="103px"
                android:src="@drawable/shadow_small" >
        </ImageView>
     <ImageView android:id="@+id/shadow4" 
                android:layout_width="112px"             
                android:layout_height="112px"
                android:layout_x="88px"
                android:layout_y="106px"
                android:src="@drawable/shadow_medium" >
        </ImageView>
        
        <ImageView android:id="@+id/shadow5" 
                android:layout_width="98px"             
                android:layout_height="98px"
                android:layout_x="170px"
                android:layout_y="104px"
                android:src="@drawable/shadow_small" >
        </ImageView>
        
        <ImageView android:id="@+id/shadow6" 
                android:layout_width="98px"             
                android:layout_height="98px"
                android:layout_x="184px"
                android:layout_y="34px"
                android:src="@drawable/shadow_small" >
        </ImageView>
        
        <ImageView android:id="@+id/shadow7" 
                android:layout_width="98px"             
                android:layout_height="98px"
                android:layout_x="254px"
                android:layout_y="34px"
                android:src="@drawable/shadow_small" >
        </ImageView>
      <RelativeLayout 
      
      android:layout_width="345px"
      android:layout_height="192px"
      android:layout_x="7px"
      android:layout_y="24px"
      >
      <RelativeLayout  android:id="@+id/shortcut2"
        android:layout_width="85px"
        android:layout_height="84px"
        android:layout_marginTop="12px"
        android:layout_marginLeft="12px">
            
            <ImageView  android:id="@+id/skin2"
                android:layout_width="wrap_content"             
                android:layout_height="wrap_content"
 >
            </ImageView>
            <ImageView  android:id="@+id/label2"
                android:layout_width="wrap_content"             
                android:layout_height="23px" 
                android:layout_alignBottom="@id/skin2"
                >
            </ImageView>
            
        </RelativeLayout>   
        
      <RelativeLayout  android:id="@+id/shortcut3"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_below="@+id/shortcut2"
        android:layout_alignLeft="@id/shortcut2"
        android:layout_marginLeft="13px"
         >  
            <ImageView  android:id="@+id/skin3"
                android:layout_width="wrap_content"             
                android:layout_height="wrap_content"
                 >
            </ImageView>
            <ImageView  android:id="@+id/label3"
                android:layout_width="wrap_content"             
                android:layout_height="23px"  
                android:layout_alignBottom="@id/skin3"
                  >
            </ImageView>
            
        </RelativeLayout> 
        
   <RelativeLayout android:id="@+id/shortcut1"      
        
         android:layout_width="96px" 
         android:layout_height="96px"     
         android:layout_toRightOf="@+id/shortcut2"
         android:layout_alignBottom="@id/shortcut2"
         
         >  
         <ImageView android:id="@+id/skin1"
                android:layout_width="wrap_content"             
                android:layout_height="wrap_content"
                >
            </ImageView>
            <ImageView  android:id="@+id/label1"
                android:layout_width="wrap_content"             
                android:layout_height="23px"  
                android:layout_alignBottom="@id/skin1"
                >
            </ImageView>
   </RelativeLayout>
   
        
   <RelativeLayout  android:id="@+id/shortcut4"
        android:layout_width="84px"
        android:layout_height="84px"
        android:layout_alignTop="@+id/shortcut3"
        android:layout_toRightOf="@id/shortcut3">
              
            <ImageView android:id="@+id/skin4"
                android:layout_width="wrap_content"             
                android:layout_height="wrap_content"
                >
            </ImageView>
            <ImageView  android:id="@+id/label4"
                android:layout_width="wrap_content"             
                android:layout_height="23px"  
                android:layout_alignBottom="@id/skin4"
                >
            </ImageView>
            
        </RelativeLayout> 
        
           
      <RelativeLayout  android:id="@+id/shortcut5"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_toRightOf="@+id/shortcut4"
        android:layout_alignTop="@id/shortcut4"
         >  

            
            <ImageView android:id="@+id/skin5"
                android:layout_width="wrap_content"             
                android:layout_height="wrap_content"
                >
            </ImageView>
            <ImageView  android:id="@+id/label5"
                android:layout_width="wrap_content"             
                android:layout_height="23px"  
                android:layout_alignBottom="@id/skin5"
                >
            </ImageView>
            
        </RelativeLayout> 
        
   <RelativeLayout  android:id="@+id/shortcut6"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_toRightOf="@+id/shortcut1"
        android:layout_alignBottom="@id/shortcut1"
         >  

            <ImageView android:id="@+id/skin6"
                android:layout_width="88px"             
                android:layout_height="88px"
                >
            </ImageView>
            <ImageView  android:id="@+id/label6"
                android:layout_width="70px"             
                android:layout_height="23px"  
                android:layout_alignBottom="@id/skin6"
                >
            </ImageView>
            
        </RelativeLayout> 
        
        
        
    <RelativeLayout  android:id="@+id/shortcut7"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_toRightOf="@+id/shortcut6"
        android:layout_alignTop="@id/shortcut6"
         >  
            
            <ImageView android:id="@+id/skin7"
                android:layout_width="88px"             
                android:layout_height="88px"
                >
            </ImageView>
            <ImageView  android:id="@+id/label7"
                android:layout_width="70px"             
                android:layout_height="23px"  
                android:layout_alignBottom="@id/skin7"
                >
            </ImageView>
            
        </RelativeLayout> 
        
    </RelativeLayout>        
 </AbsoluteLayout>  

 <AbsoluteLayout
    android:layout_width="142px"
    android:layout_height="240px" >
    <ImageView android:id="@+id/skinbg"
         android:layout_width="82px"             
         android:layout_height="240px"
         android:layout_x="40px"
         android:layout_y="0px"
	  android:background="@drawable/skin_thumbnail_bg_landscape" 
    ></ImageView>
    <ListView android:id="@+id/list"
    android:layout_width="55px"
    android:layout_height="216px" 
    android:layout_x="51px"
    android:layout_y="0px"
    android:fadingEdge="none"    
    android:divider="#000000"  
    android:scrollingCache="false"  
    android:listSelector="#00000000"
    android:scrollbars="none"
    android:cacheColorHint="#00000000"
    android:background="#00000000"
    
    ></ListView> 
</AbsoluteLayout>  
    
  </LinearLayout>  
  
   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
       <Button android:id="@+id/set"
            
            android:text="@string/set_skin_button"
            
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_weight="1.0" 
            android:textSize="16px"
            android:textColor="#ff000000"
            android:layout_alignParentBottom="true"
 
        ></Button>
     </RelativeLayout>  
</LinearLayout>

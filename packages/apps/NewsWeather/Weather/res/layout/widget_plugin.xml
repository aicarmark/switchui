<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="167dp"
    >
     
    <LinearLayout android:id="@+id/weather_animation_layout"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:layout_marginLeft="11dp"
	       android:layout_marginBottom="14dp">
	</LinearLayout>

    <RelativeLayout	
        android:id="@+id/weather"
		android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="center_horizontal|center_vertical"
	    android:padding="15dp"
	    >  
	   
	    <TextView  
	        android:id="@+id/temperature"
  			android:layout_width="wrap_content"
   		    android:layout_height="wrap_content" 
              
            android:layout_alignParentLeft="true"
            
            android:gravity="center_horizontal"
   		    android:textSize="30sp"
   		    android:shadowColor="@color/shadow_color"
   		    android:shadowRadius="2.0"
    		android:shadowDy="1.0"
    		
   		    android:textStyle="bold"
   		    android:textColor="@color/temperature_color"/>
		    
	    <TextView  
	        android:id="@+id/city_name"
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		   
			android:layout_alignParentRight="true"
	        android:singleLine = "true"
	        android:textSize="17sp"
	        android:shadowRadius = "2.0"
    		android:shadowDy = "1.0"
	       	android:gravity="center_horizontal"
	        android:shadowColor="@color/shadow_color"
	        android:textStyle="bold"
	        android:textColor="@color/city_color"/> 	    
   	    
   	     
	   	<TextView  
	        android:id="@+id/date"
  			android:layout_width="wrap_content"
   		    android:layout_height="wrap_content" 
              
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            
            android:gravity="center_horizontal"
   		    android:textSize="30sp"
   		    android:shadowColor="@color/shadow_color"
   		    android:shadowRadius="2.0"
    		android:shadowDy="1.0"
    		
   		    android:textStyle="bold"
   		    android:textColor="@color/temperature_color"/>
	   	
   		
   		<TextView android:id="@+id/apm"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		
    		android:shadowColor="@color/shadow_color"
    		android:shadowRadius = "2.0"
    		android:shadowDy = "1.0"
    		
    		android:layout_alignParentRight="true"
    		android:layout_alignParentBottom="true"
    		    			
    		android:textSize="20sp"
    		android:textColor="@color/time_color"/>
	    
   		<TextView  android:id="@+id/time"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		
    		android:layout_toLeftOf="@id/apm"
    		android:layout_alignTop="@id/apm"
    		android:shadowColor="@color/shadow_color"
    		android:shadowRadius = "2.0"
    		android:shadowDy = "1.0"
    		
    		android:textSize="25sp"
    		android:textColor="@color/time_color"/>
   		
   		<TextView  android:id="@+id/no_city"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:text="@string/add_a_city"
    		android:textSize="16dip"
    		android:shadowRadius = "3.0"
    		android:shadowDx = "1.2"
    		android:shadowDy = "3.0"
    		
    		android:gravity="center_horizontal|center_vertical"		    		
    		android:layout_centerInParent="true"
    		android:shadowColor="@color/shadow_color"
    		android:padding = "2dip"
    		android:textStyle="bold"
    		android:textColor="@color/city_color"/>
			
</RelativeLayout>

</FrameLayout>


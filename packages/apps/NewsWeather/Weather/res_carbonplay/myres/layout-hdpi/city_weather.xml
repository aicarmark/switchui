<?xml version="1.0" encoding="utf-8"?>

<com.motorola.mmsp.sinaweather.app.MyAbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	 android:id="@+id/city_weather" 
	android:focusable="false">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	  android:gravity="right" android:background="@drawable/weather_bg_02"
	android:paddingRight="8dip"
		android:layout_width="540px" android:layout_height="960px"
		android:orientation="vertical">
       
       <TextView android:id="@+id/current_city" android:layout_x="21px"
			android:layout_y="32px" android:layout_width="wrap_content"
			android:layout_marginTop="32px"
			android:layout_height="wrap_content" android:textSize="40sp" 
			android:textColor="@android:color/white"  android:gravity="center_vertical"
			android:shadowRadius="1" android:shadowDx="0.5" android:shadowDy="1.0"
			android:shadowColor="@android:color/black" 
                     android:singleLine="true" android:ellipsize="end"/>
			
			  <TextView android:id="@+id/todaytime" android:layout_marginTop="10dip"
			android:layout_x="21px" android:layout_y="92px" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="28sp" 
			android:textColor="@android:color/white" android:gravity="center_vertical|right"
			android:shadowRadius="1" android:shadowDx="0.5" android:shadowDy="1.0"
			 android:shadowColor="@android:color/black" />
			
			<TextView android:id="@+id/more_weather_status"
			android:layout_x="21px" android:layout_y="120px" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="22sp"
			android:textColor="@android:color/white" android:gravity="center_vertical"
			android:shadowRadius="1" android:shadowDx="0.5" android:shadowDy="1.0"
			 android:shadowColor="@android:color/black" />
			
			<TextView android:id="@+id/current_condition" android:layout_marginTop="10dip"
			android:layout_x="21px" android:layout_y="155px" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="28sp"
			android:textColor="@android:color/white" android:gravity="center_vertical"
			android:shadowRadius="1" android:shadowDx="0.5" android:shadowDy="1.0"
			 android:shadowColor="@android:color/black" />

      
      	<TextView android:id="@+id/current_range" android:layout_x="21px"
			android:layout_y="184px" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="28sp"
			android:textColor="@android:color/white" android:gravity="right|center_vertical"
			android:shadowRadius="1" android:shadowDx="0.5" android:shadowDy="1.0"
			 android:shadowColor="@android:color/black" />
			
    
    <TextView android:id="@+id/current_low_range" android:layout_x="21px"
			android:layout_y="210px" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="28sp"
			android:textColor="@android:color/white" android:gravity="right|center_vertical"
			android:shadowRadius="1" android:shadowDx="0.5" android:shadowDy="1.0"
			 android:shadowColor="@android:color/black" />


		<TextView android:id="@+id/current_temperature"
			android:layout_x="21px" android:layout_y="284px"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="90sp"  
			android:textColor="@android:color/white"
			android:gravity="right|center_vertical" android:shadowRadius="1"
			android:shadowDx="0.5" android:shadowDy="1.0" 
			android:shadowColor="@android:color/black" />
			
			
	
			<TextView android:id="@+id/realfeel"
			android:layout_x="21px" android:layout_y="380px"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="28sp" android:textColor="@android:color/white"
			android:gravity="right|center_vertical" android:shadowRadius="1"
			
			android:shadowDx="0.5" android:shadowDy="1.0" 
			android:shadowColor="@android:color/black" />
			

	</LinearLayout>
	
	 <ImageView android:id="@+id/selectCity" android:src="@drawable/setting_button_refresh" android:layout_x="420px" android:layout_y="485px"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />


	<LinearLayout android:id="@+id/city_weather_list"
		android:layout_x="0px" android:layout_y="736px" android:layout_width="fill_parent"
		android:layout_height="137px" android:orientation="horizontal"
		android:cacheColorHint="#00000000">
		
			<LinearLayout android:layout_width="135px"
				android:paddingTop="7dip" android:background="@drawable/weather1"
			android:layout_height="wrap_content" android:orientation="vertical">
			
			<TextView android:id="@+id/cell_day_1"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:textSize="22sp" android:textColor="@android:color/white"
				android:gravity="center">
			</TextView>

			<ImageView android:id="@+id/cell_icon_1"
				android:gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent">
			</ImageView>

			<TextView android:id="@+id/cell_range_1"
				android:layout_height="wrap_content" android:layout_width="fill_parent" 
				android:textSize="22sp" android:textColor="@android:color/white"
				android:gravity="center">
			</TextView>
			
		</LinearLayout>

			<LinearLayout android:layout_width="135px"
				android:paddingTop="7dip" android:background="@drawable/weather2"
			android:layout_height="wrap_content" android:orientation="vertical">
			
			<TextView android:id="@+id/cell_day_2"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:textSize="22sp" android:textColor="@android:color/white"
				android:gravity="center">
			</TextView>

			<ImageView android:id="@+id/cell_icon_2"
				android:gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent">
			</ImageView>

			<TextView android:id="@+id/cell_range_2"
				android:layout_height="wrap_content" android:layout_width="fill_parent" 
				android:textSize="22sp" android:textColor="@android:color/white"
				android:gravity="center">
			</TextView>
			
		</LinearLayout>


			<LinearLayout android:layout_width="135px"
				android:paddingTop="7dip" android:background="@drawable/weather3"
			android:layout_height="wrap_content" android:orientation="vertical">
			
			<TextView android:id="@+id/cell_day_3"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:textSize="22sp" android:textColor="@android:color/white"
				android:gravity="center">
			</TextView>

			<ImageView android:id="@+id/cell_icon_3"
				android:gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent">
			</ImageView>

			<TextView android:id="@+id/cell_range_3"
				android:layout_height="wrap_content" android:layout_width="fill_parent" 
				android:textSize="22sp" android:textColor="@android:color/white"
				android:gravity="center">
			</TextView>
			
		</LinearLayout>


			<LinearLayout android:layout_width="135px"
				android:paddingTop="7dip" android:background="@drawable/weather4"
				android:layout_height="wrap_content" android:orientation="vertical">
			
			<TextView android:id="@+id/cell_day_4"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:textSize="22sp" android:textColor="@android:color/white"
				android:gravity="center">
			</TextView>

			<ImageView android:id="@+id/cell_icon_4"
				android:gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent">
			</ImageView>

			<TextView android:id="@+id/cell_range_4"
				android:layout_height="wrap_content" android:layout_width="fill_parent" 
				android:textSize="22sp" android:textColor="@android:color/white"
				android:gravity="center">
			</TextView>
			
		</LinearLayout>


	</LinearLayout>



</com.motorola.mmsp.sinaweather.app.MyAbsoluteLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:id="@+id/bu_root">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/bu_level_label">
                </TextView>
                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="30sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/bu_level_text">
                </TextView>
       </LinearLayout>
       <FrameLayout
           android:layout_width="225dp"
           android:layout_height="140dp"
           android:layout_marginRight="50dp"
           android:clickable="true"
           android:focusable="true"
           android:layout_alignParentRight="true"
           android:id="@+id/bu_btn_img">
          <FrameLayout
                   android:layout_width="55dp"
                   android:layout_height="120dp"
                   android:layout_gravity="center"
                   android:orientation="vertical">
               <ImageView
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:layout_gravity="center_horizontal"
                   android:background="?android:attr/selectableItemBackground"
                   android:src="@drawable/battery_charge_background">
               </ImageView>
               <ImageView
                   android:layout_width="fill_parent"
                   android:paddingLeft="2dp"
                   android:paddingRight="2dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:id="@+id/overlay"
                   android:src="@drawable/ic_pane_battery_charge">
                        </ImageView>
               <LinearLayout
                   android:layout_width="fill_parent"
                   android:paddingLeft="3dp"
                   android:paddingRight="3dp"
                   android:layout_height="fill_parent"
                   android:layout_marginBottom="13dp"
                   android:layout_marginTop="19dp"
                   android:id="@+id/tank"
                   android:layout_gravity="bottom|center_horizontal"
                   android:orientation="vertical">
                   <!-- android:background="#ff5fbc46"-->
                       <ImageView
                           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:scaleType="fitEnd"
                           android:gravity="bottom|center_horizontal"
                           android:id="@+id/spacer">
                       </ImageView>
                       <ImageView
                           android:id="@+id/filler"
                           android:layout_width="fill_parent"
                           android:layout_height="fill_parent"
                           android:layout_gravity="bottom|center_horizontal"
                           android:layout_marginBottom="20dip"
                           android:scaleType="fitXY"
                           android:gravity="center_horizontal">
                       </ImageView>
               </LinearLayout>
           </FrameLayout>
       </FrameLayout>
       <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/bu_btn_img"
            android:layout_alignLeft="@id/bu_btn_img"
            android:layout_alignRight="@id/bu_btn_img"
            android:gravity="center"
            android:text="@string/bu_entry_label">
       </TextView>
</RelativeLayout>

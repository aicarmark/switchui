<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:padding="5dip"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
    android:id="@+id/disp_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/customs_displayopt_title"
    android:textAppearance="@android:style/TextAppearance.Medium">
  </TextView>
  <TextView
    android:id="@+id/disp_title"
    android:layout_below="@id/disp_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/customs_disp_text">
  </TextView>
  <FrameLayout
    android:id="@+id/disp_frame"
    android:layout_below="@id/disp_title"
    android:layout_width="fill_parent"
    android:layout_height="100dip">
  <SeekBar
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="20dip"
    android:id="@+id/customs_disp_seekbar">
  </SeekBar>
    <!-- android:thumb="@drawable/custom_thumb"-->
  <SeekBar
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="11dip"
    android:paddingLeft="29dip"
    android:paddingRight="29dip"
    android:enabled="false"
    android:thumb="@drawable/custom_progress_thumb"
    android:progressDrawable="@android:color/transparent"
    android:id="@+id/customs_disp_current">
  </SeekBar>
  <RelativeLayout
    android:orientation="vertical"
    android:layout_below="@id/customs_disp_seekbar"
    android:paddingTop="50dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
   <TextView
     android:id="@+id/disp_min"
     android:layout_alignParentLeft="true"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/disp_text_min">
 </TextView>
 <TextView
     android:layout_width="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_marginRight="5dip"
     android:layout_height="wrap_content"
     android:text="@string/disp_text_max">
 </TextView>
 <LinearLayout
    android:layout_below="@id/disp_min"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="1dip"
    android:orientation="horizontal">
 <ImageView
     android:id="@+id/disp_image"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/custom_progress_thumb">
 </ImageView>
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center_vertical"
     android:text="@string/disp_text_curr">
 </TextView>
 </LinearLayout>
 </RelativeLayout>
  </FrameLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:padding="5dip"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
    android:id="@+id/op_title"
    android:layout_alignParentTop="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/customs_offpeak_title"
    android:textAppearance="@android:style/TextAppearance.Medium">
  </TextView>
  <TextView
    android:id="@+id/op_start"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/op_title"
    android:layout_alignParentLeft="true"
    android:text="@string/customs_start_text">
  </TextView>
  <TextView
    android:id="@+id/op_end"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/op_title"
    android:layout_toRightOf="@id/op_start"
    android:layout_alignTop="@id/op_start"
    android:layout_marginLeft="100dp"
    android:text="@string/customs_end_text">
  </TextView>
  <Button
    android:layout_width="115dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/op_start"
    android:layout_alignParentLeft="true"
    android:id="@+id/op_start_button">
  </Button>
  <Button
    android:layout_width="115dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/op_end"
    android:layout_alignLeft="@id/op_end"
    android:id="@+id/op_end_button">
  </Button>
  <TextView
    android:id="@+id/op_data"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/op_start_button"
    android:layout_alignParentLeft="true"
    android:text="@string/customs_data_text">
  </TextView>
  <Button
    android:layout_width="115dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/op_data"
    android:layout_alignParentLeft="true"
    android:id="@+id/op_data_button">
  </Button>    
</RelativeLayout>

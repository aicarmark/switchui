<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_add"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/trash_area"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/imgbtn_add"
            android:layout_width="@dimen/trash_ic_size"
            android:layout_height="@dimen/trash_ic_size"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/panel_add"
	    android:background="@null"></ImageButton>
        <TextView android:id="@+id/tv_add"
	    android:text="@string/menu_add"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/trash_ic_size"
            android:gravity="center"
            android:textSize="20dp"></TextView>              
    </LinearLayout>
    
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/layout_remove"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/trash_area"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imgbtn_remove"
            android:layout_width="@dimen/trash_ic_size"
            android:layout_height="@dimen/trash_ic_size"
	    android:src="@drawable/panel_trash" ></ImageView>
        <TextView android:id="@+id/tv_remove"
	    android:text="@string/delete_zone_label_workspace" 
            android:layout_width="wrap_content"
            android:layout_height="@dimen/trash_ic_size"
            android:gravity="center"
            android:textSize="20dp"></TextView>        
    </LinearLayout>


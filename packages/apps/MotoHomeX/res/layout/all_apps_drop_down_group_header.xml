<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_widget_all_apps_button"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/all_apps_drop_down_group_item_button_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:src="@drawable/ic_filter_app_group_all" />
    <TextView
        android:id="@+id/all_apps_drop_down_group_item_button_title"
        style="@style/AllAppsSpinnerHeader"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical"
        android:paddingLeft="5dp"
        android:gravity="center|center_vertical" />
</LinearLayout>

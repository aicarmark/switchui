            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/transition_reset" 
            android:layout_gravity="center_vertical" /-->
    <!--/LinearLayout -->
    <!-- 2012-6-20, modify end -->
    <!-- 2012-06-12, end -->

</LinearLayout>
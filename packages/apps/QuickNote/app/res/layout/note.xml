<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/main"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/bg_board_softwood"
  >
  <ImageView
    android:id="@+id/image_detail"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="2px"
    android:layout_marginBottom="2px"
    android:layout_marginLeft="2px"
    android:layout_marginRight="2px"
    android:scaleType="centerInside"
    android:adjustViewBounds="true"
    android:visibility="gone"
    />
  <!-- top bar -->
  <RelativeLayout
    android:id="@+id/top_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    >
    <ImageButton
      android:id="@+id/thumbnail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="10px"
      android:layout_centerVertical="true"
      android:background="@color/transparent"
      android:src="@drawable/note_thumbnail_btn" />

    <ImageButton
      android:id="@+id/add"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="11px"
      android:background="@color/transparent"
      android:src="@drawable/note_detail_add_btn"
      />
    <ImageButton
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/add"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:src="@drawable/note_detail_share_btn" 
        />
    <ImageButton
        android:id="@+id/trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/share"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:src="@drawable/note_detail_delete_btn" 
        />
     <ImageButton
        android:id="@+id/set_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/trash"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:src="@drawable/note_detail_reminder_btn"
        />
     <!-- edit part -->
     <ImageButton
        android:id="@+id/edit_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6px"
        android:background="@color/transparent"
        android:src="@drawable/note_edit_cancel_btn"
        android:visibility="gone"
        />
     <ImageButton
        android:id="@+id/edit_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/edit_cancel"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:src="@drawable/note_edit_ok_btn" 
        android:visibility="gone"
        />
  </RelativeLayout>

  <!-- detail part -->
  <RelativeLayout
    android:id="@+id/content"
    android:layout_width="@integer/note_content_width"
    android:layout_height="@integer/note_content_height"
    android:layout_below="@+id/top_bar"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="10px"
    android:layout_marginRight="6px"
    android:layout_marginBottom="11px"
    android:background="@drawable/bg_text_note_gridme_single"
    >

    <RelativeLayout
      android:id="@+id/error"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:visibility="gone"
      >
      <ImageView 
        android:id="@+id/error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="center"
        android:src="@drawable/ic_media_file_missed_app"
        /> 
      <TextView 
       android:id="@+id/error_txt"
       android:layout_below="@+id/error_image"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="50px"
       android:textColor="@color/black"
       android:textStyle="bold"
       android:textSize="19sp"
       android:text="@string/no_file"
       android:layout_centerHorizontal="true"
       />
    </RelativeLayout>

    <RelativeLayout
      android:id="@+id/title"
      android:layout_alignParentTop="true"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      >
      <TextView
        android:id="@+id/count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="5dip"
        android:gravity="top|left"
        android:textSize="17sp"
        android:focusable="false"
        android:clickable="false"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        />
      <ScrollView
        android:id="@+id/edit_title_scrolling"
        android:layout_below="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="@integer/title_scrolling"
        android:layout_marginBottom="5px"
        android:fillViewport="true"
        android:fadingEdge="none"
        android:background="@color/transparent"
        android:visibility="gone">
        <EditText
         android:id="@+id/edit_title"
         android:layout_below="@+id/count"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:lineSpacingExtra="@dimen/note_title_linespace" 
         android:gravity="top"
         android:layout_centerHorizontal="false"
         android:scrollHorizontally="false"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textSize="20sp"
         android:textStyle="bold"
         android:textColor="@color/black"
         android:hint="@string/add_subject"
         android:singleLine="false"
         android:autoText="true"
         android:maxLength="30"
         android:imeOptions="actionDone|flagNoEnterAction"
         android:background="@drawable/bg_transparency_subject"
         android:textCursorDrawable="@null"
         android:capitalize="sentences"
         android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
         />
     </ScrollView>
     <ScrollView
        android:id="@+id/detail_title_scrolling"
        android:layout_below="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="@integer/title_scrolling"
        android:layout_marginBottom="5px"
        android:fillViewport="true"
        android:fadingEdge="none"
        android:background="@color/transparent">
       <TextView
        android:id="@+id/detail_title"
        android:layout_below="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:lineSpacingExtra="@dimen/note_title_linespace"     
        android:layout_centerHorizontal="true"
        android:gravity="top|left"
        android:scrollHorizontally="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp"
        android:textStyle="bold"
        android:hint="@string/add_subject"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:autoLink="web|phone|email"
        android:singleLine="false"
        android:imeOptions="actionDone|flagNoEnterAction"
        android:background="@drawable/bg_transparency_subject"
        />
     </ScrollView>
    </RelativeLayout>
    <ImageView
      android:id="@+id/divide_line"
      android:layout_below="@+id/title"
      android:layout_centerHorizontal="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_subject_line"
      />

    <RelativeLayout
      android:id="@+id/image_small"
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_below="@+id/divide_line"
      android:layout_centerInParent="true"
      android:layout_marginRight="2px"
      android:layout_marginBottom="2px"
      android:visibility="gone"
      >
      <ImageView
        android:id="@+id/image_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_picture_line"
        />
    </RelativeLayout>

    <ImageButton
      android:id="@+id/image_edit_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:background="@color/transparent"
      android:src="@drawable/note_detail_sketch_entry_btn"
      android:visibility="gone"
    />

    
    <!-- bottom part -->
    <LinearLayout
      android:id="@+id/bottom_part"
      android:layout_alignParentBottom="true"
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      >
      <!-- call info -->
      <LinearLayout
        android:id="@+id/call_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_semi_transparency_record"
        android:visibility="gone"
        >
        <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:orientation="horizontal"
          >
          <ImageView android:id="@+id/call_info_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
          <TextView
            android:id="@+id/call_info_name"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/call_info_type_icon"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="17sp"/>
        </LinearLayout>
        <TextView
          android:id="@+id/call_info_number"
          android:autoLink="phone"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:gravity="center_vertical"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textSize="17sp"/>
        <TextView
          android:id="@+id/call_info_date"
          android:textColor="@color/black"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:gravity="center_vertical"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textSize="17sp"/>
      </LinearLayout>
      <!-- end of call info -->
      <!-- reminder indicator -->
      <LinearLayout
       android:id="@+id/reminder"
       android:orientation="vertical"
       android:layout_above="@+id/bottom_part"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="5px"
       android:background="@drawable/bg_semi_transparency_record"
       android:visibility="gone"
       >
       <LinearLayout
         android:id="@+id/reminder_info_detail"
         android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         >
         <ImageView
          android:id="@+id/reminder_icon"
          android:src="@drawable/ic_reminder_small"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" />
         <TextView android:id="@+id/reminder_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_gravity="center_vertical"
          android:textSize="17sp"
          android:textStyle="normal"
          android:textColor="@color/black" />
       </LinearLayout> <!--end for reminder_info_detail -->
      </LinearLayout> <!-- end for reminder indicator -->
      <!--bottom btns -->
      <LinearLayout
       android:id="@+id/bottom_buttons"
       android:layout_alignParentBottom="true"
       android:orientation="horizontal"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:visibility="gone"
       >
       <ImageButton
         android:id="@+id/bg_button_1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1.0"
         android:background="@color/transparent"
         android:src="@drawable/ic_transparency_change_bg" 
         />
      <ImageButton
        android:id="@+id/bg_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@color/transparent"
        android:src="@drawable/ic_transparency_change_bg" 
        />
      <ImageButton
        android:id="@+id/bg_button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@color/transparent"
        android:src="@drawable/ic_transparency_change_bg" 
        />
      <ImageButton
        android:id="@+id/bg_button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@color/transparent"
        android:src="@drawable/ic_transparency_change_bg" 
        />
      </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout
      android:id="@+id/text_content"
      android:layout_below="@+id/divide_line"
      android:layout_above="@+id/bottom_part"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      >
      <RelativeLayout
        android:id="@+id/scrolling_text"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/call_info"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5px"
        >
        <ScrollView
          android:id="@+id/edit_scrolling_area"
          android:layout_alignParentTop="true"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="5px"
          android:fillViewport="true"
          android:fadingEdge="none"
          android:background="@color/transparent"
          android:visibility="gone"
          >
          <EditText
           android:id="@+id/edit_text_content"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="-5px"
           android:layout_centerHorizontal="true"
           android:gravity="top|left"
           android:scrollHorizontally="false"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:textSize="19sp"
           android:textStyle="normal"
           android:textColor="@color/black"
           android:singleLine="false"
           android:textCursorDrawable="@null"
           android:imeOptions="actionDone|flagNoEnterAction"
           android:background="@drawable/bg_transparency_text"
           android:autoText="true"
           android:capitalize="sentences"
           android:inputType="textLongMessage|textAutoCorrect|textCapSentences|textMultiLine"
           />
        </ScrollView>
        <ScrollView
          android:id="@+id/detail_scrolling_area"
          android:layout_alignParentTop="true"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="5px"
          android:fillViewport="true"
          android:fadingEdge="none"
          android:background="@color/transparent">
          <TextView
            android:id="@+id/detail_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5px"
            android:layout_centerHorizontal="true"
            android:gravity="top|left"
            android:scrollHorizontally="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textIsSelectable="false"
            android:autoLink="web|phone|email"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:imeOptions="actionDone|flagNoEnterAction"
            android:background="@drawable/bg_transparency_text"
            />
        </ScrollView>
      </RelativeLayout> <!--end for text content part -->
    </RelativeLayout>   <!-- end for text content -->

    <RelativeLayout
      android:id="@+id/voice_content"
      android:layout_below="@+id/divide_line"
      android:layout_above="@+id/bottom_part"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:visibility="gone"
      >
      <TextView
        android:id="@+id/edit_voice_duration"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10px"
        />
      <ImageView
        android:id="@+id/voice_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="center"
      />
      <LinearLayout
        android:id="@+id/detail_voioce"
        android:orientation="horizontal"
        android:layout_width="@integer/note_voice_content_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1px"
        android:layout_marginRight="2px"
        android:layout_alignParentBottom="true"
        >
        <include layout="@layout/audiopreview"/>
      </LinearLayout>
    </RelativeLayout> <!-- end for voice content part -->

  </RelativeLayout>  <!-- end for note content part -->
</RelativeLayout>
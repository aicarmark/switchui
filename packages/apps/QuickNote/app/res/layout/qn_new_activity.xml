<?xml version="1.0" encoding="utf-8"?>
<!-- This layout is based on "android:layout alert_dialog" and AllertController.java -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/parentPanel"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:orientation="vertical"
  android:background="@drawable/bg_semi_transparency_black"
  >

  <LinearLayout
    android:id="@+id/row1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="40dp"
    android:paddingLeft ="10dp"
    android:orientation="horizontal"
    >
    <RelativeLayout
      android:layout_width="140dip"
      android:layout_height="120dip"
      >
      <ImageButton
        android:id="@+id/add_text_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_text_note"
        android:background="@color/transparent"
        android:layout_centerHorizontal="true" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_note"
        android:layout_below="@id/add_text_note"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:focusable="false"
        android:clickable="false"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="14sp"
        />
    </RelativeLayout>
    <RelativeLayout
      android:layout_width="140dip"
      android:layout_height="120dip"
      >
      <ImageButton
        android:id="@+id/add_picture_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_picture_note"
        android:background="@color/transparent"
        android:layout_centerHorizontal="true" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/picture_note"
        android:layout_below="@id/add_picture_note"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:focusable="false"
        android:clickable="false"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="14sp"
        />
    </RelativeLayout>
  </LinearLayout>
  <LinearLayout
    android:id="@+id/row2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft ="10dp"
    >
    <RelativeLayout
      android:layout_width="140dip"
      android:layout_height="120dip"
      >
      <ImageButton
        android:id="@+id/add_sketch_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_sketch_note"
        android:background="@color/transparent"
        android:layout_centerHorizontal="true" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sketch_note"
        android:layout_below="@id/add_sketch_note"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:focusable="false"
        android:clickable="false"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="14sp"
        />
    </RelativeLayout>
    <RelativeLayout
      android:layout_width="140dip"
      android:layout_height="120dip"
      >
      <ImageButton
        android:id="@+id/add_voice_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_voice_note"
        android:background="@color/transparent"
        android:layout_centerHorizontal="true"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voice_note"
        android:layout_below="@id/add_voice_note"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:focusable="false"
        android:clickable="false"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="14sp"
        />
    </RelativeLayout>
  </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
      <LinearLayout
        android:id="@+id/widget_info"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_marginBottom="4.0dip"
        android:orientation="vertical" 
        >
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1.0"
            >
            <TextView
                android:id="@+id/validity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/showitmefor"
                android:layout_marginLeft="19dp" 
                android:layout_marginRight="19dp"
                android:textSize="20dp"
                android:textColor="@color/rss_label_color"
                />
		    <Spinner 
			    android:id="@+id/validity_set"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/validity"
			    android:layout_marginLeft="32dp"
			    android:layout_marginRight="32dp"
			    android:layout_marginTop="18dp"
			    android:prompt="@string/title_input_duration"
			    android:spinnerMode="dialog"	            
			    />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="19dp" 
                android:layout_marginRight="19dp"
                android:background="#2FFFFFFF"/>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1.0"
            >
            <TextView
                android:id="@+id/frequency"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/updatefrequency" 
                android:layout_marginLeft="19dp" 
                android:layout_marginRight="19dp"
                android:textColor="@color/rss_label_color"
                android:textSize="20dp"
                />
	       <Spinner 
                android:id="@+id/frequency_set"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/frequency"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="18dp"
                android:prompt="@string/title_input_frequency"
                android:spinnerMode="dialog"                
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="19dp" 
                android:layout_marginRight="19dp"
                android:background="#2FFFFFFF"/>
        </RelativeLayout>
    </LinearLayout>
     <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp" 
            android:layout_below="@id/widget_info"
            android:layout_marginTop="-5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="19dp"  
                android:layout_marginRight="85dp"
                android:textColor="@android:color/white"
                android:singleLine="true"
                android:text="@string/feeds"
                android:textSize="22dp"
                android:textAppearance="?android:attr/textAppearanceLarge"  
                />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="19dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:onClick="onAddFeed"
                android:src="@drawable/add"
                android:background="@drawable/button_background" 
                
                /> 
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="19dp" 
                android:layout_marginRight="19dp"
                android:background="#2FFFFFFF"
                />
        </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="8dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:text="@string/customfeed_enterrssaddress" />

        <EditText
            android:id="@+id/setfeedurl"
            android:layout_width="fill_parent"
            android:textColor="@color/rss_label_color"            
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:paddingLeft="12dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:singleLine="true"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:text="@string/customfeed_tip" 
            />
        <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:orientation="vertical" 
		    >
		    <TextView 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="4dp"
		        android:layout_marginRight="4dp"
		        android:gravity="center_vertical"
		        android:textSize="15dp"
		        android:textColor="#FF0099CC"
		        android:text="@string/recent_added"
		        />
		    <View
		        android:layout_width="fill_parent"
		        android:layout_height="1dp"
		        android:layout_marginTop="8dp"
		        android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"		        
		        android:background="#FF009FFF"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
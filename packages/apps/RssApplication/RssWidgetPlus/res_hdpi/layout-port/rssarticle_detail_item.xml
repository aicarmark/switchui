<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/article_view_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="20dp"
    android:background="@drawable/frame"
    >

    <RelativeLayout
        android:id="@+id/article_header_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        >
 		<LinearLayout 
 		    android:id="@+id/title_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center"
            >
	        <TextView
	            android:id="@+id/articledetail_title"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_marginLeft="14dp"
	            android:gravity="left|bottom"
	            android:singleLine="true"
	            android:textSize="17dp"
	            android:layout_weight="1.0"
	            />
        
            <View
	            android:id="@+id/title_divider"
	            android:layout_width="1dp"
	            android:layout_height="20dp"
	            android:background="#8FFFFFFF"
	            android:layout_marginRight="10dp"
	            />
	        <ImageView
	            android:id="@+id/business"
	            android:layout_width="27dp"
	            android:layout_height="27dp"
	            android:layout_marginRight="5dp"
	            android:src="@drawable/ic_rss_small"
	            />
        </LinearLayout>
     	<View
	        android:id="@+id/line"
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_below="@id/title_layout"
	        android:background="@drawable/list2_divider_holo_light"
	         
	        />
    </RelativeLayout>

		<!-- <TextView
	        android:id="@+id/articledetail_num"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="10dp"
	        android:textSize="17dp"
	        android:text="@string/app_name"
	        /> -->
    <RelativeLayout
        android:id="@+id/detail_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_below="@id/article_header_layout"
        >

            <LinearLayout
                android:id="@+id/article_title_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_alignParentTop="true"
                >

                <TextView
                    android:id="@+id/articledetail_author"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:textSize="16dp" 
                    android:gravity="left"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/articledetail_pubdate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:textSize="16dp"
                    android:gravity="right"
                    android:layout_marginRight="0dp"
                    android:singleLine="true" 
                    />
            </LinearLayout>
                <TextView
                    android:id="@+id/articledetail_description"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                	android:layout_below="@id/article_title_layout"
                	android:ellipsize="end"
                	android:layout_centerHorizontal="true" 
                	android:layout_marginTop="10dp"
                	android:layout_marginBottom="35dp"
                    android:textSize="15dp"
                    android:gravity="left"
                    />
    </RelativeLayout>


</RelativeLayout>

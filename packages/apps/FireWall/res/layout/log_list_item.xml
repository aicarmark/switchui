<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/log_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_marginLeft="8dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:singleLine="true"
    />

    <ImageView android:id="@+id/log_network_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/log_line1"
        android:paddingRight="8dip"
        android:paddingBottom="4dip"
    />

    <TextView android:id="@+id/log_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/log_network_type_icon"
        android:layout_alignBaseline="@id/log_line1"
        android:layout_marginRight="8dip"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:singleLine="true"
    />

   
    <ImageView android:id="@+id/log_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_network_type_icon"
        android:layout_alignParentRight="true"
        android:paddingRight="6dip"
        android:paddingBottom="2dip"
    />

    <TextView android:id="@+id/block_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/log_type_icon"
        android:layout_toLeftOf="@id/log_type_icon"
        android:layout_marginRight="8dip"
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:singleLine="true"
    />
    
    <TextView android:id="@+id/log_contacttype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/block_date"
        android:layout_alignBottom="@id/log_type_icon"
        android:layout_marginRight="10dip"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center_vertical"
        android:singleLine="true">
    </TextView>
    
    <TextView android:id="@+id/log_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/log_contacttype"
        android:layout_alignLeft="@id/log_line1"
        android:layout_alignBottom="@id/log_type_icon"
        android:ellipsize="marquee"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:singleLine="true"
    />
    
    
    <TextView android:id="@+id/block_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_line2"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:scrollHorizontally="false"
    />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:paddingLeft="4dip">

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:paddingTop="6dip">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/property_name"
				android:paddingRight="8dip" />

			<TextView android:id="@+id/prop_name" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />

		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:paddingTop="6dip">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/property_type"
				android:paddingRight="8dip" />

			<TextView android:id="@+id/prop_type" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />

		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:paddingTop="6dip">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/property_location"
				android:paddingRight="8dip" />

			<TextView android:id="@+id/prop_location"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />

		</LinearLayout>

		<LinearLayout android:id="@+id/layout_permition" 
                        android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:paddingTop="6dip">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/property_permition"
				android:paddingRight="8dip" />

			<TextView android:id="@+id/prop_permition"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />

		</LinearLayout>

		<LinearLayout android:id="@+id/layout_resolution"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:paddingTop="6dip">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/property_resolution"
				android:paddingRight="8dip" />

			<TextView android:id="@+id/prop_resolution"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />

		</LinearLayout>

		<LinearLayout android:id="@+id/layout_duration"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:paddingTop="6dip">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/property_duration"
				android:paddingRight="8dip" />

			<TextView android:id="@+id/prop_duration"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />

		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:paddingTop="6dip">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/property_size"
				android:paddingRight="8dip" />

			<TextView android:id="@+id/prop_size" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />

		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:paddingTop="6dip">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/property_modified"
				android:paddingRight="8dip" />

			<TextView android:id="@+id/prop_modified"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />

		</LinearLayout>

                <LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:paddingTop="6dip">

			<!-- TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/property_license"
				android:paddingRight="8dip" /-->

			<TextView android:id="@+id/prop_license"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />

		</LinearLayout>

	</LinearLayout>
</ScrollView>

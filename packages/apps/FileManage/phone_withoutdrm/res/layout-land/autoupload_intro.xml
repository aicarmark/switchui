<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@+id/autoUpload_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
                 <TextView android:id="@+id/mc_space_holder_1"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/mc_intro_space_holder_1"/>

                 <ImageView android:id="@+id/autoupload_graphic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/mc_space_holder_1"
                        android:background="@drawable/ic_pane_setup_08"/>

                <TextView android:id="@+id/page_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mc_space_holder_1"
                        android:layout_toRightOf="@id/autoupload_graphic"
                        android:textColor="@color/mc_intro_title_textcolor"
                        android:textSize="30sp"
                        android:text="@string/opt_in_page_title_autoupload"
                        android:gravity="center"
                        android:layout_gravity="center"/>

                <TextView android:id="@+id/mc_space_holder_2"
                        android:layout_below="@id/page_title"
                        android:layout_toRightOf="@id/autoupload_graphic"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/mc_intro_space_holder_2"/>

                <TextView android:id="@+id/feature_explanation"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_below="@id/mc_space_holder_2"
                        android:layout_toRightOf="@id/autoupload_graphic"
                        android:textColor="@color/mc_intro_textcolor"
                        android:textSize="16sp"
                        android:gravity="left"
                        android:text="@string/opt_in_blur_cg_explanation_autoupload"/>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:layout_alignParentBottom="true"
                        android:background="@null">
                        <Button
                             android:id="@+id/maybe_later"
                             android:layout_width="0dip"
                             android:layout_height="wrap_content"
                             android:layout_weight="1"
                             android:text="@string/maybe_later" />
                        <Button
                             android:id="@+id/setup_now"
                             android:layout_width="0dip"
                             android:layout_height="wrap_content"
                             android:layout_weight="1"
                             android:text="@string/setup_now" />
                </LinearLayout>
    </RelativeLayout>
</merge>

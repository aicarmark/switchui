<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="match_parent"
  android:layout_height="match_parent" android:minHeight="500dp">

  <FrameLayout android:id="@+id/filetransfer_contentPanel"
    android:layout_width="fill_parent" android:layout_height="fill_parent">

    <ListView android:id="@+id/filetransfer_file_list"
      android:layout_width="fill_parent" android:layout_height="fill_parent"
      android:drawSelectorOnTop="false" android:divider="@drawable/divider_horz_holo"
      android:visibility="visible" />

    <TextView android:id="@+id/filetransfer_empty_list"
      android:layout_width="fill_parent" android:layout_height="fill_parent"
      android:text="@string/no_tranfer_item" android:textAppearance="?android:attr/textAppearanceMedium"
      android:visibility="gone" android:gravity="center" />
  </FrameLayout>
</LinearLayout>

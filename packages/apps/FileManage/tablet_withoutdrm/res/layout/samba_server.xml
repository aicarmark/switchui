<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/SavedSmbDevice" android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:orientation="vertical">

  <TextView android:layout_width="fill_parent"
    android:layout_height="50dip" android:textAppearance="?android:attr/textAppearanceMedium" />

  <ListView android:id="@+id/SavedServerList"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:clickable="true" android:textAppearance="?android:attr/textAppearanceMedium"
    android:drawSelectorOnTop="false" />

  <ListView android:id="@+id/SambaServerPref"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:clickable="true" android:textAppearance="?android:attr/textAppearanceMedium"
    android:drawSelectorOnTop="false" />

  <TextView android:layout_width="fill_parent"
    android:layout_height="1dip" android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:layout_marginTop="-6dp" >

    <ImageView
        android:id="@+id/control_play"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/memory_bg" />

    <ImageView
        android:id="@+id/sencond_circle"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/memory_ani" />

    <ImageView
        android:id="@+id/first_circle"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:src="@drawable/memory_button_statue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/percnet"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-4dp"
            android:gravity="right"
            android:shadowColor="#e0000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="-1dp"
            android:layout_marginLeft="0dp"
            android:shadowColor="#e0000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="@string/UpdateStep"
            android:textColor="#FFFFFF"
            android:textSize="11dp" />
    </LinearLayout>

</RelativeLayout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <ImageView
        android:id="@+id/mc_intro_image"
        android:src="@drawable/ic_pane_setup_01"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mc_space_holder_1"
        android:layout_width="fill_parent"
        android:layout_toRightOf="@id/mc_intro_image"
        android:layout_height="@dimen/mc_intro_space_holder_1"/>

    <TextView
        android:id="@+id/mc_intro_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mc_space_holder_1"
        android:layout_toRightOf="@id/mc_intro_image"
        android:textColor="@color/mc_intro_title_textcolor"
        android:textSize="30sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/mc_space_holder_2"
        android:layout_below="@id/mc_intro_title"
        android:layout_toRightOf="@id/mc_intro_image"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mc_intro_space_holder_2"/>

    <TextView
        android:id="@+id/mc_intro_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_below="@id/mc_space_holder_2"
        android:layout_toRightOf="@id/mc_intro_image"
        android:textColor="@color/mc_intro_textcolor"
        android:textSize="18sp"
        android:gravity="left"/>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@null">
        <com.motorola.android.widget.ActionBar android:id="@+id/mc_intro_action_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>

</RelativeLayout>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

    <TextView android:id="@+id/hostname_view"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_marginLeft="@dimen/new_server_margin"
              android:layout_marginRight="@dimen/new_server_margin"
              android:text="@string/add_server_hostname"
              android:textColor="@android:color/primary_text_dark"
              android:gravity="left"
              android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText android:id="@+id/hostname_edit"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:layout_marginLeft="@dimen/new_server_margin"
              android:layout_marginRight="@dimen/new_server_margin"
              android:scrollHorizontally="true"
              android:autoText="false"
              android:capitalize="none"
              android:singleLine="true"
              android:gravity="fill_horizontal"
              android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView android:id="@+id/username_view"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_marginLeft="@dimen/new_server_margin"
              android:layout_marginRight="@dimen/new_server_margin"
              android:text="@string/add_server_username"
              android:textColor="@android:color/primary_text_dark"
              android:gravity="left"
              android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText android:id="@+id/username_edit"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:layout_marginLeft="@dimen/new_server_margin"
              android:layout_marginRight="@dimen/new_server_margin"
              android:scrollHorizontally="true"
              android:autoText="false"
              android:capitalize="none"
              android:singleLine="true"
              android:gravity="fill_horizontal"
              android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView android:id="@+id/password_view"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_marginLeft="@dimen/new_server_margin"
              android:layout_marginRight="@dimen/new_server_margin"
              android:text="@string/add_server_password"
              android:textColor="@android:color/primary_text_dark"
              android:gravity="left"
              android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText android:id="@+id/password_edit"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:layout_marginLeft="@dimen/new_server_margin"
              android:layout_marginRight="@dimen/new_server_margin"
              android:scrollHorizontally="true"
              android:autoText="false"
              android:capitalize="none"
              android:gravity="fill_horizontal"
              android:singleLine="true"
              android:password="true"
              android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingTop="@dimen/textview_padding_top"
                  android:paddingLeft="@dimen/textview_padding_left"
                  android:paddingRight="@dimen/textview_padding_right" >

      <Button android:id="@+id/AddServerOk"
              android:layout_width="@dimen/zero_dp"
              android:layout_gravity="left"
              android:layout_weight="@fraction/weight_one"
              android:maxLines="2"
              android:layout_height="40dip"
              android:text="@string/alert_dialog_ok" />

      <Button android:id="@+id/AddServerCancel"
              android:layout_width="@dimen/zero_dp"
              android:layout_gravity="right"
              android:layout_weight="@fraction/weight_one"
              android:maxLines="2"
              android:layout_height="40dip"
              android:text="@string/alert_dialog_cancel" />
    </LinearLayout>
  </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   <ScrollView android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:id="@+id/scroll_view">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/vip_caller_heading"
                android:textSize="14sp"
                android:textColor="@color/ics_blue"
                android:gravity = "center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="8dip"
                />

            <View
              android:id="@+id/account_filter_header_bottom_divider4"
              android:layout_height="1dip"
              android:layout_marginRight="7dip"
              android:layout_marginLeft="7dip"
              style="@style/SectionDivider" />

           <com.motorola.contextual.commonutils.chips.AddressEditTextView
                android:id="@+id/to"
                style="@style/RecipientEditTextView"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"/>

           <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:text="@string/ringer_level_heading"
                android:textSize="14sp"
                android:textColor="@color/ics_blue"
                android:gravity = "center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="10dip"
                />

            <View
              android:id="@+id/account_filter_header_bottom_divider"
              android:layout_height="1dip"
              android:layout_marginRight="7dip"
              android:layout_marginLeft="7dip"
              style="@style/SectionDivider" />

           <Spinner
                android:id="@+id/ringer_volume_level"
                android:prompt="@string/ringer_volume"
                android:layout_height="50dip" android:layout_width="fill_parent"
                android:layout_marginRight="7dip"
                android:layout_marginLeft="7dip"
                android:layout_marginTop="10dip" />

                <CheckBox android:id="@+id/ringer_vibrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vibrate"
                    android:textColor="?android:textColorPrimary"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginTop="6dip"
                    android:layout_marginLeft="7dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginBottom="10dip" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/edit_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView_wrapper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/parent_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/top_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <!-- TOP DESCRIPTION -->

            <LinearLayout
                android:id="@+id/top_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingBottom="10dp">

               <ImageView
                    android:id="@+id/description_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:contentDescription="@string/drivemode_icon_image_desc"
                    android:src="@drawable/ic_drivemode_car_on" />
                
                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sg_drivemode_Desc" 
                    android:textSize="16sp"
                    android:textColor="@color/white"/>
                
            </LinearLayout>

            <TextView
                android:id="@+id/top_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textSize="16sp"
                android:text="@string/sg_drivemode_Desc1" 
                android:textColor="@color/white"/>

            <!-- BULLETPOINT 1 -->

            <LinearLayout
                android:id="@+id/bulletpoint_wrapper_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/bulletpoint_image_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@string/bullet_image_desc"
                    android:src="@drawable/bullet" />

                <TextView
                    android:id="@+id/bulletpoint_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="@string/sg_drivemode_Item1"  
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- BULLETPOINT 2 -->

            <LinearLayout
                android:id="@+id/bulletpoint_wrapper_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/bulletpoint_image_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@string/bullet_image_desc"
                    android:src="@drawable/bullet" />

                <TextView
                    android:id="@+id/bulletpoint_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="@string/sg_drivemode_Item2"  
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- BULLETPOINT 3 -->

            <LinearLayout
                android:id="@+id/bulletpoint_wrapper_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/bulletpoint_image_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@string/bullet_image_desc"
                    android:src="@drawable/bullet" />

                <TextView
                    android:id="@+id/bulletpoint_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="@string/sg_drivemode_Item3"  
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<!-- HSHIEH: This layout needs some redoing. The RelativeLayout usage will be unreliable on non-standard aspect-ratios and font sizes-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="#000000">

    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/about_image_desc"
        android:scaleType="fitXY"
        android:src="@drawable/ws_photo_smartactions"
    />
    
    <RelativeLayout
        android:id="@+id/title_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/welcome_screen_title_margin_top"
        android:visibility="visible">
        <ImageView
            android:id="@+id/title_white_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/logo_image_desc"
            android:src="@drawable/ws_title_smartactions_white"
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/welcome_screen_title_margin_top"
        android:visibility="visible">
        <ImageView
            android:id="@+id/title_moto_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/logo_image_desc"
            android:src="@drawable/ws_title_moto_logo_clip"
        />
        <ImageView
            android:id="@+id/title_red_text_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:contentDescription="@string/logo_image_desc"
            android:src="@drawable/ws_title_red_text_h"
        />
        <ImageView
            android:id="@+id/title_red_text_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/logo_image_desc"
            android:src="@drawable/ws_title_red_text_v"
        />
        <ImageView
            android:id="@+id/title_red_stripe"
            android:layout_width="@dimen/welcome_screen_title_stripe_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:contentDescription="@string/logo_image_desc"
            android:src="@drawable/ws_title_red_stripe"
         />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/welcome_screen_info_layout_margin"
        android:layout_marginLeft="@dimen/welcome_screen_info_layout_margin"
        android:layout_marginRight="@dimen/welcome_screen_info_layout_margin"
        >
        <TextView
            android:id="@+id/info_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/welcome_screen_info_text_margin"
            android:layout_marginRight="@dimen/welcome_screen_info_text_margin"
            android:textColor="#e6e6e6"
            android:textSize="@dimen/welcome_screen_button_font_size_immutable"
            android:text="@string/about_text_2"
        />
        <Button
            android:id="@+id/learn_more_button"
            android:layout_width="@dimen/welcome_screen_learn_more_button_width"
            android:layout_height="@dimen/welcome_screen_button_height"
            android:layout_below="@id/info_text"
            android:layout_marginTop="@dimen/welcome_screen_button_margin"
            android:layout_marginBottom="@dimen/welcome_screen_button_margin"
            android:background="@drawable/ws_btn_default"
            android:textColor="#e6e6e6"
            android:textSize="@dimen/welcome_screen_button_font_size_immutable"
            android:text="@string/learn_more"
            android:visibility="visible"
        />
        <Button
            android:id="@+id/get_started_button"
            android:layout_width="@dimen/welcome_screen_get_started_button_width"
            android:layout_height="@dimen/welcome_screen_button_height"
            android:layout_below="@id/info_text"
            android:layout_marginTop="@dimen/welcome_screen_button_margin"
            android:layout_marginBottom="@dimen/welcome_screen_button_margin"
            android:layout_toRightOf="@id/learn_more_button"
            android:background="@drawable/ws_btn_arrow"
            android:textColor="#e6e6e6"
            android:textSize="@dimen/welcome_screen_button_font_size_immutable"
            android:text="@string/get_started"
            android:visibility="visible"
        />
        <Button
            android:id="@+id/get_started_button_2"
            android:layout_width="@dimen/welcome_screen_get_started_button_2_width"
            android:layout_height="@dimen/welcome_screen_button_height"
            android:layout_below="@id/info_text"
            android:layout_marginTop="@dimen/welcome_screen_button_margin"
            android:layout_marginBottom="@dimen/welcome_screen_button_margin"
            android:background="@drawable/ws_btn_arrow"
            android:textColor="#e6e6e6"
            android:textSize="@dimen/welcome_screen_button_font_size_immutable"
            android:text="@string/get_started"
            android:visibility="gone"
        />

    </RelativeLayout>

</RelativeLayout>
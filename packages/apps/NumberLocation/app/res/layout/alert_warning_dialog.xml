<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent" android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:theme="@android:style/Theme.Light" android:layout_height="match_parent">

    
	<TextView android:id="@+id/string_update_result"
		android:layout_width="match_parent" android:layout_marginTop="15px"
		android:gravity="left"
		android:layout_marginLeft="20px"
		android:layout_height="wrap_content"
		android:textColor = "@android:color/white"
		android:textAppearance="?android:attr/textAppearanceMedium" />
	<CheckBox android:text="@string/string_next_time" android:id="@+id/CheckBoxNextTime"
	    android:textColor = "@android:color/white"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
</LinearLayout>
</ScrollView>
